{
  "name": "car-inventory-backend",
  "version": "1.0.0",
  "description": "Backend API for car inventory system with Google Sheets integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prod": "NODE_ENV=production node src/index.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop car-inventory-backend",
    "pm2:restart": "pm2 restart car-inventory-backend",
    "pm2:logs": "pm2 logs car-inventory-backend",
    "pm2:monit": "pm2 monit",
    "deploy": "./scripts/deploy.sh",
    "start:prod": "./scripts/start-production.sh",
    "setup:render": "node scripts/setup-render-credentials.js",
    "get:credentials": "node scripts/get-base64-credentials.js",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "test:websocket": "node scripts/test-websocket.js",
    "test:websocket:load": "node scripts/load-test-websocket.js",
    "test:validate": "node scripts/pre-test-validation.js",
    "test:minimal": "node scripts/minimal-quota-test.js",
    "test:real-world": "node scripts/real-world-load-test.js",
    "test:quota-recovery": "node scripts/quota-recovery-test.js",
    "test:retention": "node scripts/monthly-retention-test.js",
    "test:all": "npm run test:validate && npm run test:minimal && npm run test:real-world",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "car-inventory",
    "google-sheets",
    "inventory-management",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.4",
    "uuid": "^8.3.2",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
